@require '../../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  primary: #5867c2
  accent: #5867c2
  secondary: $grey.lighten-1
  info: $blue.lighten-1
  warning: $amber.darken-2
  error: $red.accent-4
  success: $green.lighten-2
}
@import '../../../node_modules/vuetify/src/stylus/app'

$material-light.text.primary = #373737
$material-light.text.link = inherit
$material-light.text.link-hover = inherit

@import '../../../node_modules/vuetify/src/stylus/components/*'

/* Input field details should be a little bit lower. */
.input-group__details {
    padding-top: 11px !important;
}

.list__tile__action .input-group--text-field label {
    top: 0;
}

.dialog__content,
.list__tile {
    line-height: initial;
}

.list__tile--link:hover, .list__tile--highlighted {
    background: #f5f5f5;
}
table.table tfoot tr:not(:last-child):not(:only-child) td {
    padding: 0;
}
table.table tfoot tr:not(:last-child):not(:only-child) td:first-child {
    padding-left: 24px;
}
table.table tbody td {
    font-size: 14px;
}
.bill-summary__item-title {
    font-size: 14px;
}
.bill-summary__item-price {
    font-size: 15px;
}

